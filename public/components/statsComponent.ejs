<%
let kd = currentKills / currentDeaths;
%>


<div style="margin-top: 5rem;" class="container mx-auto box-border box-content border">
    <div style="padding-top: 2.5rem;" class="flex flex-wrap -mx-4">
        <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/4 px-4 mb-4">
            <a class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
                <h5 class="flex justify-center mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Dein Score:</h5>
                <p class="flex justify-center font-normal text-gray-700 dark:text-gray-400"><%= currentScore %> Punkte</p>
            </a>
        </div>
        <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/4 px-4 mb-4">
            <a class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
                <h5 class="flex justify-center mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Deine Kills:</h5>
                <p class="flex justify-center font-normal text-gray-700 dark:text-gray-400"><%= currentKills %></p>
            </a>
        </div>
        <div class="w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/4 px-4 mb-4">
            <a class="block max-w-sm p-6 bg-white border border-gray-200 rounded-lg shadow hover:bg-gray-100 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-700">
                <h5 class="flex justify-center mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Deine KD:</h5>
                <p class="flex justify-center font-normal text-gray-700 dark:text-gray-400"><% if (isNaN(kd)) { %>
                        Keine Daten
                    <% } else { %>
                        <%= kd.toFixed(2) %>
                    <% } %></p>
            </a>
        </div>
    </div>


    <div class="mb-5 mt-5 border shadow-md"></div>

    <table class="table-custom min-w-full divide-y divide-gray-200 w-full mt-8">
        <thead>
        <tr>
            <th class="text-left py-3 px-6 bg-gray-50 font-bold text-gray-600 uppercase tracking-wider">Attribute</th>
            <th class="text-left py-3 px-6 bg-gray-50 font-bold text-gray-600 uppercase tracking-wider">Value</th>
        </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
        <%
        // Mapping-Objekt für Variablennamen im Frontend
        const frontendVariableNames = {
            steam: 'Steam ID:',
            name: 'Name:',
            lastip: 'Deine letzte IP:',
            score: 'Score:',
            kills: 'Tode:',
            headshots: 'Headshots:'
            // Weitere Variablen und ihre Frontend-Namen...
        };

        Object.entries(playerData).forEach(([key, value]) => {
            // Überprüfen, ob die Variable im Mapping-Objekt enthalten ist
        if (frontendVariableNames.hasOwnProperty(key)) {
            const frontendKeyName = frontendVariableNames[key]; // Frontend-Name aus dem Mapping-Objekt holen
        %>
        <tr>
            <td class="py-3 px-6 capitalize"><%= frontendKeyName %></td>
            <td class="py-3 px-6"><%= value %></td>
        </tr>
        <%
        }
        });
        %>
        </tbody>
    </table>
</div>